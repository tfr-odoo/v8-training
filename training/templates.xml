<openerp><data>
  <template id="index">
  	<t t-call="website.layout">
      <t t-set="title">Academy</t>
      <div class="oe_structure" />
      <div class="oe_structure">
        <div class="container">
           <h1>Smile formation</h1>
          <t t-foreach="teachers" t-as="teacher">
            <p><span t-field="teacher.first_name"/> 
               <span t-field="teacher.name"/> 
               <a t-attf-href="/smile/{{slug(teacher)}}" >View</a> 
            </p>
          </t>
        </div>
      </div>
      <div class="oe_structure" />
    </t>
  </template>
  
  <template id="view_teacher">
  	<t t-call="website.layout">
      <t t-set="title">Teacher</t>
      <div class="oe_structure" />
      <div class="oe_structure">
        <div class="container">
           <h1><span t-field="teacher.first_name"/> <span t-field="teacher.name"/> </h1>
           <em>Age: <t t-raw="teacher.age"/></em>
           <p><t t-raw="teacher.description"/> </p>
           <div class="row">
           			<div class="col-md-3" ><strong>Session Name</strong></div>
					<div class="col-md-1" ><strong>Quantity</strong></div>
					<div class="col-md-1" ><strong>Unit Price</strong></div>
					<div class="col-md-3" ><strong>Date</strong></div>
           </div>
           <t t-foreach="teacher.session_ids" t-as="session">
           		<div class="row">
					<div class="col-md-3" t-field="session.name" />
					<div class="col-md-1" t-field="session.qty"  />
					<div class="col-md-1" t-field="session.unit_price"  />
					<div class="col-md-3" t-field="session.date" t-field-options='{"format": "dd MMMM yyyy"}' />
				</div>
           </t>
           <p><a t-attf-href="/{{return_path}}">Back</a></p>
        </div>
      </div>
      <div class="oe_structure" />
    </t>
  </template>
</data></openerp>